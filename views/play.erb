<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Battle</title>
  </head>
  <body>
    <h2><%= @game.player_1.name %> vs <%= @game.player_2.name %></h2>
    <div>
      <%= @game.player_1.name %>: <%= @game.player_1.hit_points %>HP
    </div>
    <div>
      <%= @game.player_2.name %>: <%= @game.player_2.hit_points %>HP
    </div>
    <div>
      <form action="/attack">
        <input type="submit" value="Attack">
      </form>
    </div>
  </body>
</html>
